{
    "name": "dtm/dtm-client",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "php",
        "dtm",
        "dtm-client"
    ],
    "description": "",
    "autoload": {
        "psr-4": {
            "DtmClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DtmClientTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "DtmClient\\ConfigProvider"
        }
    }
}
